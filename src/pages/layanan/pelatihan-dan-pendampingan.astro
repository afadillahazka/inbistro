---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { getEntry } from "astro:content";

const layanan = await getEntry("layanan", "pelatihan-dan-pendampingan");
const { Content } = await layanan.render();
const { title, description, meta_title, image } = layanan.data;

---

<Base 
  title={"Pelatihan dan Pendampingan"}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <PageHeader title={"Pelatihan dan Pendampingan"} />
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="text-center md:col-10 lg:col-7">
          <h2 set:html={markdownify(title)} class="h3 mb-6" />
          <div class="content">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
