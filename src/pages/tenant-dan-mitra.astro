---
import Base from "@/layouts/Base.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { markdownify } from "@/lib/utils/textConverter";
import type { Button, Feature } from "@/types";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";
import { FaCheck } from "react-icons/fa/index.js";

import social from "@/config/social-2.json";
import Social from "@/components/Social.astro";
import Social2 from "@/components/Social2.astro";

interface Tenantpage {
  banner: {
    title: string;
    content: string;
    image: string;
    button: Button;
  };
  tenant: Feature[];
}

const tenantmitrapage = await getEntry("tenantmitrapage", "-index");
const { tenant }: Tenantpage = tenantmitrapage.data;

const { title, description, meta_title, image } = tenantmitrapage.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
<PageHeader title={tenantmitrapage.data.title} />
  <section class="section-sm">
    <div class="container">
  <!-- Features  -->
  {
    tenant.map((tenant, index: number) => (
      <section class={`section-sm ${index % 2 === 0 && "bg-gradient"}`}>
        <div class="container">
          <div class="row items-center justify-between">
            <div
              class={`mb:md-0 mb-6 md:col-5 ${index % 2 !== 0 && "md:order-2"}`}
            >
              <Image
                src={tenant.image}
                height={480}
                width={520}
                alt={tenant.title}
                format="webp"
              />
            </div>
            <div class={`md:col-7 lg:col-6 ${index % 2 !== 0 && "md:order-1"}`}>
              <h2 set:html={markdownify(tenant.title)} class="mb-4 text-bik2" />
              <p set:html={markdownify(tenant.content)} class="mb-8 text-lg" />
              <ul>
                {tenant.bulletpoints.map((bullet: string) => (
                  <li class="relative mb-4 pl-6">
                    <FaCheck className={"absolute left-0 top-1.5"} />
                    <span set:html={markdownify(bullet)} />
                  </li>
                ))}
              </ul>
              {tenant.button.enable && (
                <a class="btn btn-primary mt-5" href={tenant.button.link}>
                  {tenant.button.label}
                </a>
              )}
              
            </div>
          </div>
          </div>
        </section>
        ))
      }
  <!-- /Features -->
</div>
</section>
</Base>
