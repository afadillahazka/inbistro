---
const { source, className } = Astro.props;
import DynamicIcon from "@/helpers/DynamicIcon";

export interface ISocial {
  name: string;
  icon: string;
  link: string;
}
---

<ul class={className}>
  {
    source.map((social2: ISocial) => (
      <li>
        <a
          aria-label={social2.name}
          href={social2.link}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <span class="sr-only">{social2.name}</span>
          <DynamicIcon class="inline-block" icon={social2.icon} />
        </a>
      </li>
    ))
  }
</ul>
